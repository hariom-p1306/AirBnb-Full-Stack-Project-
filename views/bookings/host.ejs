<% layout('layouts/boilerplate') -%>

<body>
<h2>Your Booking Requests</h2>

<% bookings.forEach(booking => { %>
  <div class="card mb-3">
    <div class="card-body">

      <p><b>Listing:</b> <%= booking.listing.title %></p>
      <p><b>Guest:</b> <%= booking.guest.username %></p>
      <p><b>Status:</b> <%= booking.status %></p>

      <% if(booking.status === "pending") { %>
        <form action="/bookings/<%= booking._id %>/accept" method="POST" style="display:inline;">
          <button class="btn btn-success btn-sm">Accept</button>
        </form>

        <form action="/bookings/<%= booking._id %>/reject" method="POST" style="display:inline;">
          <button class="btn btn-danger btn-sm">Reject</button>
        </form>
      <% } %>

    </div>
  </div>
<% }) %>

</body>
